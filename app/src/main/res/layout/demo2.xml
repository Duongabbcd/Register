<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/imagenote9"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left"

        android:src="@drawable/note9"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="104dp"
        android:text="Price : 10000$"
        android:textSize="28dp"
        app:layout_constraintLeft_toRightOf="@+id/imagenote9"
        app:layout_constraintTop_toTopOf="@+id/imagenote9" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="25dp"
        android:layout_marginTop="64dp"
        android:text="Samsung galaxy note 9"
        android:textSize="12dp"
        app:layout_constraintLeft_toRightOf="@+id/imagenote9"
        app:layout_constraintTop_toBottomOf="@+id/textView1" />
    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:text="Dimension 1200 x 1200"
        android:textSize="12dp"
        app:layout_constraintLeft_toRightOf="@+id/imagenote9"
        app:layout_constraintTop_toBottomOf="@+id/text1" />
    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:text="Published on : Aug 24th,2018"
        android:textSize="12dp"
        app:layout_constraintLeft_toRightOf="@+id/imagenote9"
        app:layout_constraintTop_toBottomOf="@+id/text2" />
    <TextView
        android:id="@+id/text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:text="Category : Electronics"
        android:textSize="12dp"
        app:layout_constraintLeft_toRightOf="@+id/imagenote9"
        app:layout_constraintTop_toBottomOf="@+id/text3" />

    <TextView
        android:id="@+id/text5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:text="Tags : Samsung Galaxy Note"
        android:textSize="12dp"
        app:layout_constraintLeft_toRightOf="@+id/imagenote9"
        app:layout_constraintTop_toBottomOf="@+id/text4" />

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imagenote9">


            <Button

                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="#0C0C0C"
                android:text="HOME"
                android:textSize="15dp"
                android:textStyle="bold"

                />

            <Button

                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="44dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="153dp"
                android:backgroundTint="#070707"
                android:text="BUY NOW"
                android:textSize="15dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:backgroundTint="#0C0C0C"
                android:text="DETAIL"
                android:textSize="15dp"
                android:textStyle="bold" />
        </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>